
<!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<script
  defer
  src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"
></script>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css"
/>
<% include('layout/cabecalho'); %>
<section class="hero is-dark is-medium">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Atualizar Contato
        </h1>
        <h2 class="subtitle">
          preencha o formulario para atualizar o contato no sistema
        </h2>
      </div>
    </div>
  </section>
<section class="section">
    <div class="container">
  <form action="/contatos/atualiza" method="POST">
    <% include('layout/contato_form'); %> <input type="hidden" name="id"
    value="<%= contacts == null ? "" : id %>">
    <!-- NOME -->
    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"> Nome Completo: </label>
      </div>
      <div class="field-body">
        <div class="field">
          <input class="input" type="text" name="nome" value="<%= contacts ==
          null ? "" : contacts[id].nome %>" >
        </div>
      </div>
    </div>

     <!-- EMAIL -->
     <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Email: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="email" value="<%= contacts ==
            null ? "" : contacts[id].email %>" >
          </div>
        </div>
      </div>

       <!-- Endereço -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Endereço: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="endereco" value="<%= contacts ==
            null ? "" : contacts[id].endereco %>" >
          </div>
        </div>
      </div>

       <!-- Bairro -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Bairro: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="bairro" value="<%= contacts ==
            null ? "" : contacts[id].bairro %>" >
          </div>
        </div>
      </div>

       <!-- Numero -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Numero: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="numero" value="<%= contacts ==
            null ? "" : contacts[id].numero %>" >
          </div>
        </div>
      </div>

       <!-- CEP -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> CEP: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="cep" value="<%= contacts ==
            null ? "" : contacts[id].cep %>" >
          </div>
        </div>
      </div>

       <!-- Cidade -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Cidade: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="cidade" value="<%= contacts ==
            null ? "" : contacts[id].cidade %>" >
          </div>
        </div>
      </div>

       <!-- Estado -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Estado: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="estado" value="<%= contacts ==
            null ? "" : contacts[id].estado %>" >
          </div>
        </div>
      </div>

       <!-- Telefone -->
    <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label"> Telefone: </label>
        </div>
        <div class="field-body">
          <div class="field">
            <input class="input" type="text" name="telefone" value="<%= contacts ==
            null ? "" : contacts[id].telefone %>" >
          </div>
        </div>
      </div>

      <!-- Submit -->
      <div class="field is-grouped is-grouped-right">
        <div class="control">
          <input class="button is-link" type="submit" value="OK"/>
        </div>
        <div class="control">
          <a href="/agenda" class="button is-link is-light">Cancelar</a>
        </div>
  </form>
  </div>
</section>

<% include('layout/rodape'); %>
